<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rizkytm.bhaskara">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity"
            android:label="Bhaskara"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/SplashActivityTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Main2Activity"
            android:label="Home"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".GameActivity"
            android:label="Game"
            android:parentActivityName=".Main2Activity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.rizkytm.bhaskara.Main2Activity" />
        </activity>
        <activity
            android:name=".KamusActivity"
            android:label="Kamus"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".QuizActivity" />
        <activity
            android:name=".LatihanActivity"
            android:label="Quiz"
            android:parentActivityName=".Main2Activity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.rizkytm.bhaskara.Main2Activity" />
        </activity>
        <activity
            android:name=".DetailTopikActivity"
            android:label="Rincian Teori"
            android:parentActivityName=".TheoryActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.rizkytm.bhaskara.TheoryActivity" />
        </activity>
        <activity
            android:name=".MenuEssayActivity"
            android:label="Quiz"
            android:parentActivityName=".Main2Activity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.rizkytm.bhaskara.Main2Activity" />
        </activity>
        <activity
            android:name=".EssayActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".TheoryActivity"
            android:label="Teori"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MainActivity"></activity>
    </application>

</manifest>