<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@mipmap/latar_biru_edit"
    tools:context=".LatihanActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:text="ᮘ᮪ᮠᮞ᮪ᮊᮛ ᮞᮥᮔᮓ"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/text_bhaskara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="108dp"
        android:text="Bhaskara Sunda"
        android:textColor="@android:color/white"
        android:textSize="35sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:text="Quiz Mode Pilihan Ganda"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_view_highscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_start_quiz"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:text="Skor Tertinggi: 0"
        android:textSize="20sp"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button_start_quiz"
        android:background="@drawable/buttonbackground"
        android:radius="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Mulai Quiz"
        android:padding="8dp"
        android:elevation="8dp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/text_view_kategori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_start_quiz"
        android:layout_centerHorizontal="true"
        android:text="Kategori: "
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_marginTop="16dp"/>

    <Spinner
        android:id="@+id/spinner_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_kategori"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/text_view_kesulitan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner_category"
        android:layout_centerHorizontal="true"
        android:text="Tingkat Kesulitan: "
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/white"/>

    <Spinner
        android:id="@+id/spinner_difficulty"
        style="@style/MySpinnerLook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_kesulitan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/white"/>

</RelativeLayout>