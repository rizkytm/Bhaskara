<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/bg_gradient"
    tools:context=".LatihanActivity">

    <TextView
        android:id="@+id/tulisan_aksara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:text="ᮘ᮪ᮠᮞ᮪ᮊᮛ ᮞᮥᮔᮓ"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/text_bhaskara"
        android:layout_below="@+id/tulisan_aksara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Bhaskara Sunda"
        android:textColor="@android:color/white"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/kuis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text_bhaskara"
        android:text="Kuis Pilihan Ganda"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_view_topik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/peraturan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="Topik : Judul"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/text_view_highscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_start_quiz"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:text="Skor Tertinggi: 0"
        android:textSize="20sp"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/peraturan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="4dp"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="Peraturan :"/>

    <TextView
        android:id="@+id/detail_peraturan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:layout_below="@+id/peraturan"
        android:background="@drawable/bg_peraturan"
        android:padding="8dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:textSize="16sp"
        android:text="1. Soal yang tersedia sebanyak 5 soal\n2. Jawab pertanyaan dengan memilih satu dari empat jawaban\n3. Waktu pengerjaan tiap soal yaitu 30 detik\n4. Jawaban benar mendapatkan poin 1"/>

    <Button
        android:id="@+id/button_start_quiz"
        android:background="@drawable/buttonbackground"
        android:radius="3dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:text="Mulai Kuis"
        android:padding="8dp"
        android:elevation="8dp"
        android:textColor="@color/colorPrimary"/>

    <!--<TextView-->
        <!--android:id="@+id/text_view_kategori"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@id/button_start_quiz"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:text="Kategori: "-->
        <!--android:textColor="@android:color/white"-->
        <!--android:textSize="20sp"-->
        <!--android:layout_marginTop="16dp"/>-->

    <Spinner
        android:id="@+id/spinner_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_kategori"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/white"/>

    <!--<TextView-->
        <!--android:id="@+id/text_view_kesulitan"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@id/spinner_category"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:text="Tingkat Kesulitan: "-->
        <!--android:textSize="20sp"-->
        <!--android:layout_marginTop="16dp"-->
        <!--android:textColor="@android:color/white"/>-->

    <Spinner
        android:id="@+id/spinner_difficulty"
        style="@style/MySpinnerLook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_kesulitan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/white"/>

</RelativeLayout>